{% extends 'layouts/logged_in.twig' %}

{% block page_content %}

<h1 class="h2 mb-4">
  {{title}}
</h1>

{% if schedules %}
  <table class="table">
    <thead>
      <tr class="d-flex">
        <th class="col-2">Title</th>
        <th class="col-2">Invite Link</th>
        <th class="col-2">Last Modified</th>
      </tr>
    </thead>
    <tbody>
      {% for schedule in schedules %}
        <tr class="d-flex">
          <td class="col-2">
            <a href="{{site_url}}/schedule/{{schedule.id}}">{{schedule.name}}</a>
          </td>
          <td class="col-2">
            <button class="btn btn-secondary btn-sm copy-btn" data-link="{{site_url}}/schedule/invite?key={{schedule.hash}}">
              <i class="fas fa-clipboard"></i> Copy
            </button>
          </td>
          <td class="col-2">
            {{schedule.mod_date | date("n/j/y g:ia")}} PST
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  {% if search_term %}
    <p>No results found</p>
  {% else %}
    <p>Nothing here yet! Want to <a href="{{site_url}}/schedules/create">create a schedule</a>?</p>
  {% endif %}
{% endif %}



{% endblock %}
