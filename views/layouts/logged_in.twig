<!DOCTYPE html>

<html lang="en">
  <head>
    <title>{{title}} | {{site_name}}</title>
    <meta name="robots" content="noarchive">
    {{ include('layouts/_head.twig') }}
    {% block page_head %}
    {% endblock %}
  </head>
  <body>
    {{msg.display()}}
    <nav class="navbar navbar-expand-md py-0 sticky-top">
      <div class="navbar-container">
        <div class="d-flex flex-md-nowrap justify-content-between align-items-center">
          <a class="navbar-brand" href="{{site_url}}/meetings">
            <span class="d-none d-md-inline">{{site_name}}</span>
          </a>
          <button
            aria-controls="sidebar-menu"
            aria-expanded="false"
            aria-label="Toggle navigation"
            class="navbar-toggler position-absolute d-md-none collapsed"
            data-toggle="collapse"
            data-target="#sidebar-menu"
            type="button"
          >
            <i class="fas fa-bars"></i>
          </button>
          <div class="align-items-center d-md-flex d-none">
            {% if invites %}
              <a class="navbar-invites-link mr-4" href="{{site_url}}/meetings#invites">
                <i class="fas fa-bell"></i>
                <span class="navbar-invites-count">
                  {{invites | count}}
                </span>
              </a>
            {% endif %}
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <button class="nav-link dropdown-toggle d-flex nav-avatar-link" id="avatar-menu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Hi, {{user_firstname}}
                  <span class="mx-2 d-inline-block nav-avatar">
                    <i class="fas fa-user-circle"></i>
                  </span>
                </button>
                <div class="dropdown-menu" aria-labelledby="avatar-menu">
                  <a class="dropdown-item {{ profile_page == true ? 'active' }}" href="{{site_url}}/profile">
                    Profile
                  </a>
                  {% if is_admin %}
                    <a class="dropdown-item" href="{{site_url}}/adminusers">
                      Admin
                    </a>
                  {% endif %}
                  <a class="dropdown-item" href="{{site_url}}/logout">
                    Log Out
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="navbar-mobile-title d-block d-md-none">{{site_name}}</div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <nav id="sidebar-menu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
          <div class="sidebar-sticky pt-4">
            <div class="d-md-none">
              <h4 class="h5 px-4 text-white">
                Hi, {{user_firstname}}
              </h4>
              <hr>
            </div>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="sidebar-link {{ meetings_page == true ? 'active' }}" href="{{site_url}}/meetings">
                  My Meetings
                </a>
              </li>
              <li class="nav-item">
                <a class="sidebar-link {{ meetings_page == true ? 'active' }}" href="{{site_url}}/schedule">
                  My Find-A-Times
                </a>
              </li>
              <li class="nav-item">
                <a class="sidebar-link {{ calendar_page == true ? 'active' }}" href="{{site_url}}/calendar">
                  Calendar
                </a>
              </li>
              <li class="nav-item">
                <a class="sidebar-link {{ manage_page == true ? 'active' }}" href="{{site_url}}/manage">
                  Manage Created
                </a>
              </li>
              <li class="nav-item p-4">
                <a class="btn btn-block btn-primary" href="{{site_url}}/create">
                  Create
                </a>
              </li>
            </ul>
            <div class="d-md-none">
              <hr>
              <ul class="nav flex-column">
                <li class="nav-item-m">
                  <a class="sidebar-link {{ profile_page == true ? 'active' }}" href="{{site_url}}/profile">
                    Profile
                  </a>
                </li>
                <li class="nav-item">
                  <a class="sidebar-link" href="{{site_url}}">
                    Logout
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <main role="main" class="col-lg-10 col-md-9 ml-sm-auto pb-5 pt-4 px-4">
          {% block page_content %}
          {% endblock %}
        </main>
      </div>
    </div>
    {{ include('layouts/_footer.twig') }}
    {% block page_footer %}
    {% endblock %}
  </body>
</html>
